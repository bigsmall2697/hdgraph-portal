{
  "hosting": [
      {
          "target": "testnet",
          "public": "dist/",
          "ignore": [
              "firebase.json",
              "**/.*",
              "**/node_modules/**"
          ],
          "rewrites": [
              {
                  "source": "**",
                  "destination": "/index.html"
              }
          ]
      },
      {
          "target": "mainnet",
          "public": "dist/",
          "ignore": [
              "firebase.json",
              "**/.*",
              "**/node_modules/**"
          ],
          "rewrites": [
              {
                  "source": "**",
                  "destination": "/index.html"
              }
          ]
      }
  ]
}
